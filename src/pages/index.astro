---
import SectionHeader from "../components/SectionHeader.astro";
import Layout from "../layout/Layout.astro";
import Hub from "../components/Hub.astro";
import Blog from "../components/Blog.astro";
---

<Layout>
	<main>
		<h1 class="text-3xl lg:text-3xl font-bold font-souvenir mb-4 mt-6">
			Salut &#128075;
		</h1>
		<p id="about">
			I'm Hamzat, a computer science student obsessed with <span class="highlights">programs</span>.
			. I enjoy building things that run on computers, there's nothing more rewarding than tackling a coding challenge and making it work perfectly (: <br />
			
		</p>
		<section>
			<SectionHeader>Hub</SectionHeader>
			<Hub/>
			<SectionHeader>Articles:</SectionHeader>
			<Blog/>
		</section>
	</main>
</Layout>
<style>
	.header {
		color: rgb(232, 222, 222);
	}
	.highlights {
		color: rgb(198, 212, 198);
	}
	#about{
		font-weight: bold;
		font-style: italic;
	}
</style>
